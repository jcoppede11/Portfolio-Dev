		</section>

		<section class="w-full mx-auto lg:w-[740px] pt-20">
			<div class="text-2xl font-bold text-wrap mb-4">Experiencia laboral</div>			

			<Experience />
		</section>
	</main>
</Layout>

<style>
	.movement {
		animation-name: movement-animation; /* Nombre del elemento @keyframes */
		animation-duration: 2.3s; /* Acelera o relentiza el movimiento */
		animation-iteration-count: infinite; /* Cantidad de agitaciÃ³n */
		transform-origin: 75% 75%;
		display: inline-block;
  }
  @keyframes movement-animation {
	0% {
		transform: rotate(0deg);
	}
	10% {
		transform: rotate(14deg);
	}
	20% {
		transform: rotate(-8deg);
	}
	30% {
		transform: rotate(14deg);
	}
	40% {
		transform: rotate(-4deg);
	}
	50% {
		transform: rotate(10deg);
	}
	60% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(0deg);
	}
  }
</style>
