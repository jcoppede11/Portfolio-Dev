---
// Import COMPONENTS
import SectionContainer from '../components/structuresContainer/SectionContainer.astro';
import Badge from '../components/Badge.astro';
import Experience from '../components/Experience.astro';
import CardProjects from '../components/CardProjects.astro';
import TechnologyJob from '../components/TechnologyJob.astro';
import Paragraph from '../components/ui/text/Paragraph.astro';
import H4TitleBold from '../components/ui/text/H4TitleBold.astro';

// Import SVG
import Briefcase from '../../public/svg/Briefcase.astro';
import CodeBracket from '../../public/svg/CodeBracket.astro';
import Technology from '../../public/svg/Technology.astro';

import Layout from '../layouts/Layout.astro';

const ABOUTME = [
    {
        paragraph: `
		   	¡Hola, ¿como están? Soy un desarrollador Fullstack con un fuerte enfoque en Frontend, trabajando con React, Tailwind, JavaScript y TypeScript. 
			Me encanta crear interfaces atractivas, fluidas y accesibles, pero mi curiosidad no se queda ahí.
			También me sumerjo en el Backend, trabajando con Node.js, Express y MySQL, optimizando APIs y asegurando que cada pieza del sistema encaje con precisión. 
			También cuento con experiencia en servidores, configurando entornos y asegurando que todo corra sin problemas.
  		`,
    },
]
---

<Layout 
	title="Porfolio personal - Desarrollador y Programador Web."
	description="Especializado en crear todo tipo de aplicaciones."
>
	<main>
		<SectionContainer id="about-me">
			<div class="flex gap-4 items-center mb-5">
				<Badge>Disponible para trabajar</Badge>				
			</div>
			<h3 class="text-dark text-4xl font-bold flex flex-row gap-x-4 mb-8">Juan José Coppede</h3>	
			<Paragraph>
				{ABOUTME.map((item) => item.paragraph)}
			</Paragraph>			
		</SectionContainer>

		<SectionContainer id="experience">	
			<H4TitleBold subtitle="Experiencia laboral">
				<Briefcase slot="icon" class="size-7" />
			</H4TitleBold>
			
			<Experience />
		</SectionContainer>

		<SectionContainer id="technology">
			<H4TitleBold subtitle="Manejo de tecnologías">
				<Technology slot="icon" class="size-7" />
			</H4TitleBold>
			<TechnologyJob />
		</SectionContainer>


		<SectionContainer id="projects">
			<H4TitleBold subtitle="Proyectos creados">
				<CodeBracket slot="icon" class="size-7" />
			</H4TitleBold>
			<CardProjects />						
		</SectionContainer>
	</main>
</Layout>

<style>
	.movement {
		animation-name: movement-animation; /* Nombre del elemento @keyframes */
		animation-duration: 2.3s; /* Acelera o relentiza el movimiento */
		animation-iteration-count: infinite; /* Cantidad de agitación */
		transform-origin: 75% 75%;
		display: inline-block;
  }
  @keyframes movement-animation {
	0% {
		transform: rotate(0deg);
	}
	10% {
		transform: rotate(14deg);
	}
	20% {
		transform: rotate(-8deg);
	}
	30% {
		transform: rotate(14deg);
	}
	40% {
		transform: rotate(-4deg);
	}
	50% {
		transform: rotate(10deg);
	}
	60% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(0deg);
	}
  }
</style>
