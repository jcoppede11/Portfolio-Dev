import Experience from '../components/Experience.astro'

import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="Portfolio de jcoppede - Desarrollador y Programador Web."
	description="Especializado en crear todo tipo de aplicaciones."
>
	<main>
		<section class="w-full mx-auto lg:w-[740px] pt-20">
			<div class="flex gap-4 items-center mb-4">
				<img class="rounded-full shadow-lg size-16 mb-4" 
					src="../../public/img/programmer-dalle.webp" 
					alt="JC photo" 
				/>
				<Badge>Disponible para trabajar</Badge>				
			</div>
			<h1 class="text-dark text-4xl font-bold flex flex-row gap-x-4 pb-4">
				Hola, soy Juan
				<span role="img" class="text-3xl movement">ðŸ‘‹</span>
			</h1>				
			<h2 class="text-2xl text-wrap">
				<span>Soy un </span>
				<strong><span class="text-blue-500">Desarrollador Web FrontEnd</span></strong> y <strong><span class="text-blue-500">BackEnd</span></strong>
