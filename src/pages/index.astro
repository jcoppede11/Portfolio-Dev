<style>
	.movement {
		animation-name: movement-animation; /* Nombre del elemento @keyframes */
		animation-duration: 2.3s; /* Acelera o relentiza el movimiento */
		animation-iteration-count: infinite; /* Cantidad de agitaci칩n */
		transform-origin: 75% 75%;
		display: inline-block;
  }
  @keyframes movement-animation {
	0% {
		transform: rotate(0deg);
	}
	10% {
		transform: rotate(14deg);
	}
	20% {
		transform: rotate(-8deg);
	}
	30% {
		transform: rotate(14deg);
	}
	40% {
		transform: rotate(-4deg);
	}
	50% {
		transform: rotate(10deg);
	}
	60% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(0deg);
	}
  }
</style>
