---
import TechnologyItem from './technology/TechnologyItem.astro'
import OrderList from "./ui/list/OrderList.astro";

const TECHNOLOGY = [
    { text: 'HTML5, CSS3, SASS, Bootstrap, Tailwind.' },
    { text: 'ES13, Typescript.' },
    { text: 'React, Custom hooks, Redux Toolkit, NextJS, Astro.' },
    { text: 'Node.js, Express, Sequelize, Prisma, Zod, APIs RESTful, JWT, OAuth, Microservicios.' },
    { text: 'Pruebas unitarias con Jest y validación manual de funcionalidades.' },
    { text: 'MySQL, PostgreSQL y MongoDB.' },
    { text: 'Git, GitHub. GitHub Actions.' },
    { text: 'Debian, Scripts Bash, Docker.' },
    { text: 'POO, MVC, Principios SOLID, Clean Code, Clean Architecture.' },
    { text: 'Patrones de diseño — Creacionales, Estructurales, Comportamiento.' },
]
---

<OrderList>
    {
        TECHNOLOGY.map(technology => ( <TechnologyItem {...technology} /> ))
    }    
</OrderList>
