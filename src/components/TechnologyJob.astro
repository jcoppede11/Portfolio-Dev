---
import TechnologyItem from './technology/TechnologyItem.astro'
import OrderList from "./ui/list/OrderList.astro";

const TECHNOLOGY = [
    { text: 'HTML5, CSS3, Flexbox, Grid.' },
    { text: 'SASS, Bootstrap, Tailwind.' },
    { text: 'EJS, ES6, Typescript.' },
    { text: 'Implementación de pruebas unitarias (Jest) y validación manual de software.' },
    { text: 'React, Custom hooks, Redux Toolkit, NextJS, Astro.' },
    { text: 'Node.js, Express, Sequelize, Prisma, Zod, APIs RESTful, JWT, OAuth, Microservicios.' },
    { text: 'Git, GitHub, Postman.' },
    { text: 'MySQL, PostgreSQL y MongoDB.' },
    { text: 'Debian GNU/Linux, Scripts Bash, OWASP, hardening de servidores.' },
    { text: 'MVC, POO, Clean Code, Principios SOLID.' },
    { text: 'Design Patterns: Adapter, Decorator, Composite, Singleton.' },
]
---

<OrderList>
    {
        TECHNOLOGY.map(technology => ( <TechnologyItem {...technology} /> ))
    }    
</OrderList>
