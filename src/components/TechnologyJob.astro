---
import TechnologyItem from './technology/TechnologyItem.astro'
import OrderList from "./ui/list/OrderList.astro";

const TECHNOLOGY = [
    { text: 'HTML, CSS3, SASS, Flexbox, Grid.' },
    { text: 'Bootstrap, Tailwind, MUI.' },
    { text: 'EJS, ES6, Typescript.' },
    { text: 'React, NextJS, Astro.' },
    { text: 'Git, GitHub.' },
    { text: 'NodeJS, ExpressJS, MySQL, Postman, Zod, Sequelize, Prisma.' },
    { text: 'Debian GNU/Linux, Scripts Bash, Digital Ocean, Cloudflare.' },
    { text: 'MVC, POO, Clean Code.' },
]
---

<OrderList>
    {
        TECHNOLOGY.map(technology => ( <TechnologyItem {...technology} /> ))
    }    
</OrderList>
