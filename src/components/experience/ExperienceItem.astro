---
export interface Props {
    job: string
    title: string
    date: string
    description: string
    jobType: string
}
const { job, title, date, description, jobType } = Astro.props;
---

<li class="mb-10 ms-6">
    <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
        <svg class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
        </svg>
    </span>
    <span class="block text-lg font-semibold text-gray-900 dark:text-white">{ job }</span>
    <div class="grid grid-cols-1 gap-0.5">
        <span class="block text-sm font-normal">{ title }</span>
        <span class="block text-sm font-normal">{ description }</span>
        <span class="block text-xs font-normal text-gray-500 dark:text-gray-400">{ jobType }</span>
        <time class="block text-xs font-normal text-gray-500 dark:text-gray-400">{ date }</time>            
    </div>
    <span class=""></span>
</li>