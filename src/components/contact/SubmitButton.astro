---
interface Props {
    label?: string;
    id?: string;
    className?: string;
    disabled?: boolean;
}

const {
    label = "Enviar mensaje",
    id = "submit-btn",
    className = "",
    disabled = false,
} = Astro.props as Props;
---

<div class="form-group full-width">
    <button
        type="submit"
        class={`w-full bg-gradient-to-r from-blue-500 to-blue-700 text-white font-semibold rounded-lg px-6 py-3 flex items-center justify-center gap-2 hover:translate-y-[-2px] disabled:opacity-70 ${className}`}
        id={id}
        disabled={disabled}
    >
        <span class="button-text">{label}</span>
        <span class="loading-spinner" style="display: none;">
            <svg
                class="animate-spin"
                width="20"
                height="20"
                viewBox="0 0 24 24"
            >
                <circle
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"
                    fill="none"
                    opacity="0.3"></circle>
                <path
                    d="m12,2a10,10 0 0,1 10,10"
                    stroke="currentColor"
                    stroke-width="4"
                    fill="none"></path>
            </svg>
        </span>
    </button>
</div>
