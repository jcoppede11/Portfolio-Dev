---
import { COLORS } from "../../../config/globalStyles";

interface Props {
  title: string;
  className?: string;
}

const { title, className = "" } = Astro.props;
---

<h4
  class={`${COLORS.TITLE_GRAY_TEXT} text-lg lg:text-2xl flex gap-x-3 ${className}`}
>
  <slot name="icon" />
  {title}
</h4>
