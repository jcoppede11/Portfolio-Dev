---
interface Props {
    title: string;
    description: string;
    img: string;
    alt: string;
}

const { title, description, img, alt } = Astro.props;
---

<div class="max-w-sm rounded-lg shadow-lg overflow-hidden bg-white transition-transform transform hover:scale-105">
    <img class="w-full h-40 object-cover" src={img} alt={alt} />

    <div class="p-4">
        <h2 class="text-xl font-semibold text-gray-800">{title}</h2>
        <p class="text-gray-600 text-sm mt-2">{description}</p>
    </div>
</div>
