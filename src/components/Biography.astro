---
import { Image } from 'astro:assets';
import H1TitleBold from "./ui/text/H1TitleBold.astro";
import ParagraphBiography from "./ui/text/ParagraphBiography.astro";

interface Props {
  title?: string;
  paragraph: string;
  imageSrc: ImageMetadata;
}

const { title, paragraph, imageSrc } = Astro.props as Props;
---
<article class="biography">
    <div class="bio-grid">
        <div class="bio-left">
            {title ? <H1TitleBold title={title} className="mb-4"/> : null}
            <ParagraphBiography>{paragraph}</ParagraphBiography>
        </div>

        <figure class="bio-right">
            <Image 
              src={imageSrc} 
              alt="Imagen de perfil" 
              class="bio-image" 
            />
        </figure>
    </div>
</article>

<style>
  .biography {
    width: 100%;
  }

  .bio-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 2rem;
    align-items: center; 
  }

  .bio-right {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .bio-image {
    width: 300px;
    height: 345px;
    object-fit: cover;
    border-radius: 18px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.12);
  }

  @media (max-width: 1024px) {
    .bio-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .bio-image {
      width: 100%;
      height: 100%;
      margin: 0 auto;
    }
  }
</style>